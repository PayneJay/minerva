<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bookDetailVM"
            type="com.minerva.common.WebViewViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.minerva.widget.TitleBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_dimen_size_46dp"
            android:background="@color/colorPrimaryDark" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:max="100"
            android:layout_height="@dimen/nav_dimen_size_3dp" />

        <WebView
            android:id="@+id/webView"
            progressBar="@{progressBar}"
            webUrl="@{bookDetailVM.linkUrl}"
            android:background="@color/color_3FE280"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</layout>