<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="resultSiteVM"
            type="com.minerva.business.search.ResultSiteViewModel" />

        <import type="com.minerva.common.Constants.BitmapTransform" />
    </data>

    <RelativeLayout
        onClick="@{resultSiteVM::onItemClick}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect_with_bottom_line">

        <ImageView
            android:id="@+id/img_topic_icon"
            errorThumbnail="@{@drawable/icon_topic_default}"
            imageUrlThumbnail="@{resultSiteVM.imgUrl}"
            placeHolderThumbnail="@{@drawable/icon_topic_default}"
            thumbnailType="@{BitmapTransform.CIRCLE}"
            android:layout_width="@dimen/nav_dimen_size_30dp"
            android:layout_height="@dimen/nav_dimen_size_30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/nav_dimen_size_10dp" />

        <TextView
            text="@{resultSiteVM.name}"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_dimen_size_40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/nav_dimen_size_10dp"
            android:layout_toEndOf="@id/img_topic_icon"
            android:gravity="center_vertical"
            android:textColor="@color/color_000000"
            android:textSize="16sp" />

        <ImageView
            onClick="@{resultSiteVM::onFollowClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/nav_dimen_size_10dp"
            android:src="@drawable/icon_topic_follow" />

    </RelativeLayout>
</layout>