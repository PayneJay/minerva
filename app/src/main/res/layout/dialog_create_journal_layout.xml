<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="createJournalVM"
            type="com.minerva.business.mine.journal.CreateJournalViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/nav_dimen_size_5dp"
        app:cardElevation="@dimen/nav_dimen_size_5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_EEEEEE"
            android:orientation="vertical">

            <TextView
                text="@{createJournalVM.titleText}"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_dimen_size_40dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_dimen_size_40dp"
                android:layout_marginStart="@dimen/nav_dimen_size_5dp"
                android:layout_marginEnd="@dimen/nav_dimen_size_5dp"
                android:background="@android:color/white"
                android:hint="@string/dialog_create_journal_title_hint"
                android:maxLength="20"
                android:padding="@dimen/nav_dimen_size_2dp"
                android:text="@={createJournalVM.titleContent}" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_dimen_size_40dp"
                android:layout_marginStart="@dimen/nav_dimen_size_5dp"
                android:layout_marginTop="@dimen/nav_dimen_size_5dp"
                android:layout_marginEnd="@dimen/nav_dimen_size_5dp"
                android:background="@android:color/white"
                android:hint="@string/dialog_create_journal_desc_hint"
                android:maxLength="64"
                android:padding="@dimen/nav_dimen_size_2dp"
                android:text="@={createJournalVM.desContent}" />

            <CheckBox
                checkedListener="@{createJournalVM.checkedChangeListener}"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/nav_dimen_size_40dp"
                android:checked="@{createJournalVM.onlyShowSelf}"
                android:text="@string/dialog_only_show_me" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_dimen_size_40dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="@dimen/nav_dimen_size_5dp">

                <TextView
                    onClick="@{createJournalVM::onCancelClick}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dialog_cancel"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="@dimen/nav_dimen_size_1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_EEEEEE" />

                <TextView
                    onClick="@{createJournalVM::onConfirmClick}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/dialog_confirm"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>